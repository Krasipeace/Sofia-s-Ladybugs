<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sofia_s_Ladybugs.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Image
                x:Name="LadybugImage1"
                Source="ladybug1.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="ladybug image"
                IsVisible="True">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer 
                        Tapped="OnTapGestureRecognizerTapped"
                        NumberOfTapsRequired="1" />
                </Image.GestureRecognizers>
            </Image>

            <Image
                x:Name="LadybugImage2"
                Source="ladybug2.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="ladybug image"
                IsVisible="False">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer 
                            Tapped="OnTapGestureRecognizerTapped"
                            NumberOfTapsRequired="1" />
                </Image.GestureRecognizers>
            </Image>

            <Label
                Text="Събери всички калинки"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                SemanticProperties.Description="Събери всички калинки" />

            <Button
                x:Name="NewGameButton"
                Text="Започни игра"
                FontSize="36"
                Clicked="OnNewGameButtonClicked"
                SemanticProperties.Description="Започни игра" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
